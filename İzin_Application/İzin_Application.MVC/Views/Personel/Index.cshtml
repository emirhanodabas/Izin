﻿@using İzin_Application.Entity.Model
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    thead {
    }

    tr:nth-child(even) {
        background-color: #D6EEEE;
    }
</style>
<div class="well">
    <table class="table">
        <thead>
            <tr>
                <th style="text-align:center">Adı</th>
                <th style="text-align:center">Soyadı</th>
                <th style="text-align:center">Mail</th>
                <th style="text-align:center">Departman</th>
                <th style="text-align:center">Kullanıcı Adı</th>
                <th style="text-align:center">Giriş Tarihi</th>
                <th style="text-align:center">Telefon</th>
                <th style="text-align:center">Adres</th>
                <th style="text-align:center">TC</th>
                <th style="text-align:center">İzin Hakkı</th>
                <th style="text-align:center">Yetki</th>
                <th style="text-align:center">İşlemler</th>


            </tr>
        </thead>
        <tbody>
            <tr>

                @foreach (var per in Model)
                {
                <tr>
                    <td style="text-align:center">@per.PersonelAdi</td>
                    <td style="text-align:center">@per.PersonelSoyadi</td>
                    <td style="text-align:center">@per.PersonelEmail</td>
                    <td style="text-align:center">@per.departman.Departman_Adi</td>
                    <td style="text-align:center">@per.PersonelKAdi</td>
                    <td style="text-align:center">@per.GirisTarihi.ToShortDateString()</td>
                    <td style="text-align:center">@per.Telefon</td>
                    <td style="text-align:center">@per.Adres</td>
                    <td style="text-align:center">@per.TC</td>
                    <td style="text-align:center">@per.IzinHak</td>
                    <td style="text-align:center">@per.yetki.YetkiAdi</td>
                    <td>
                        <a class="btn btn-warning" href="/Personel/Guncelle/@per.PersonelId">Güncelle</a>

                        @Html.ActionLink("SİL", "Sil", new { id = per.PersonelId }, new { @class = "btn btn-danger", onclick = "return confirm('Veriyi Silmek istediğinize emin misiniz ? ')" })
                    </td>

                </tr>
            }


            </tbody>
        </table>
        <a href="/Personel/Ekle/" class="btn btn-primary" style="margin: 5px;color:white"> Yeni Personel Ekle </a>

    </div>