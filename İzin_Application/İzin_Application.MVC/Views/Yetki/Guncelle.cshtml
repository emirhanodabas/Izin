﻿@model İzin_Application.Entity.Model.Yetki
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="tab-pane" id="settings">

    <form class="form-horizontal" method="post">
        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Id</label>
            <div class="col-sm-8">
                <input type="text" name="YetkiId" class="form-control" id="inputName" readonly value="@Model.YetkiId" placeholder="Id">
            </div>
            <div class="col-sm-2">

            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Yetki Adı</label>
            <div class="col-sm-8">
                <input type="text" name="YetkiAdi" class="form-control" id="inputName" value="@Model.YetkiAdi.ToString()" placeholder="Adi">
            </div>
            <div class="col-sm-2">

            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Açıklama</label>
            <div class="col-sm-8">
                <input type="text" name="YetkiAciklama" class="form-control" id="inputName" value="@Model.YetkiAciklama.ToString()" placeholder="Adi">
            </div>
            <div class="col-sm-2">

            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </div>
    </form>


</div>